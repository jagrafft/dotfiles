set record = "+jason.grafft-rai/Sent Mail"
set spoolfile = "+jason.grafft-rai/[Gmail].All Mail"

set realname = "Jason A. Grafft"
set from = "jason.grafft@relational.ai"
set use_from = yes
set sendmail = "/usr/bin/msmtp -a rai"
set mbox = "+jason.grafft-rai/archive"
set postponed = "+jason.grafft-rai/drafts"

set signature = "~/.mutt/signatures/rai"

color status green default

macro index D \
      "<save-message>+jason.grafft-rai/Trash<enter>" \
      "move message to Trash"

macro index J \
      "<save-message>+jason.grafft-rai/Spam<enter>" \
      "mark message as Junk"
