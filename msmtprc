defaults
host smtp.gmail.com
port 587
protocol smtp
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account account001
user account001user@domain
from account001user@domain
passwordeval pass show path/to/account001

account rai
user account002user@domain
from account002user@domain
passwordeval pass show path/to/account002

account default: account001